{% extends 'base.html.twig' %}

{% block title %}Création utilisateur{% endblock %}

{% block body %}
    <div class="cell-lg-6 cell-md-12 offset-lg-3">
        <div class="p-4">
            <h4>Création utilisateur</h4>

            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            {{ form_start(form) }}
            <div class="row mb-2">
                {{ form_label(form.pseudo, 'Pseudo :', { 'label_attr': {'class': 'cell-md-6 cell-lg-4'} }) }}
                <div class="cell-md-6 cell-lg-8">
                    {{ form_row(form.pseudo) }}
                </div>
            </div>
            <div class="row mb-2">
                {{ form_label(form.nom, 'Nom :', { 'label_attr': {'class': 'cell-md-6 cell-lg-4'} }) }}
                <div class="cell-md-6 cell-lg-8">
                    {{ form_row(form.nom) }}
                </div>
            </div>
            <div class="row mb-2">
                {{ form_label(form.prenom, 'Prénom :', { 'label_attr': {'class': 'cell-md-6 cell-lg-4'} }) }}
                <div class="cell-md-6 cell-lg-8">
                    {{ form_row(form.prenom) }}
                </div>
            </div>
            <div class="row mb-2">
                {{ form_label(form.plainPassword, 'Mot de passe :', { 'label_attr': {'class': 'cell-md-6 cell-lg-4'} }) }}
                <div class="cell-md-6 cell-lg-8">
                    {{ form_row(form.plainPassword) }}
                </div>
            </div>

            <div class="row mb-2">
                {{ form_label(form.telephone, 'Téléphone :', { 'label_attr': {'class': 'cell-md-6 cell-lg-4'} }) }}
                <div class="cell-md-6 cell-lg-8">
                    {{ form_row(form.telephone) }}
                </div>
            </div>

            <div class="row mb-2">
                {{ form_label(form.mail, 'Email :', { 'label_attr': {'class': 'cell-md-6 cell-lg-4'} }) }}
                <div class="cell-md-6 cell-lg-8">
                    {{ form_row(form.mail) }}
                </div>
            </div>

            <div class="row mb-2">
                {{ form_label(form.admin, 'Admin :', { 'label_attr': {'class': 'cell-md-6 cell-lg-4'} }) }}
                <div class="cell-md-6 cell-lg-8">
                    {{ form_row(form.admin) }}
                </div>
            </div>
            <div class="row mb-2">
                {{ form_label(form.actif, 'Actif :', { 'label_attr': {'class': 'cell-md-6 cell-lg-4'} }) }}
                <div class="cell-md-6 cell-lg-8">
                    {{ form_row(form.actif) }}
                </div>
            </div>
            <div class="row mb-2">
                {{ form_label(form.actif, 'Termes et conditions :', { 'label_attr': {'class': 'cell-md-6 cell-lg-4'} }) }}
                <div class="cell-md-6 cell-lg-8">
                    {{ form_row(form.agreeTerms) }}
                </div>
            </div>
            <div class="row mb-2">
                {{ form_label(form.site, 'Site :', { 'label_attr': {'class': 'cell-md-6 cell-lg-4'} }) }}
                <div class="cell-md-6 cell-lg-8">
                    {{ form_row(form.site) }}
                </div>
            </div>

            <div class="row">
                <div class="cell">
                    <button class="button success"><span class="mif-floppy-disk mif-2x"></span></button>
                    {{ form_end(form) }}
                    <a class="button secondary" href="{{ path('participant_index') }}"><span class="mif-arrow-left mif-2x"></span>&nbsp;&nbsp;Retour à la liste</a>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
